<UserControl
    x:Class="RpaWinUiComponentsPackage.AdvancedWinUiDataGrid.AdvancedDataGrid"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Grid x:Name="RootGrid" Background="White">
        <!-- Basic structure with required controls -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Headers -->
                <RowDefinition Height="*"/>    <!-- Data rows -->
            </Grid.RowDefinitions>
            
            <!-- HEADERS -->
            <ItemsRepeater x:Name="HeadersRepeater"
                           Grid.Row="0"/>
            
            <!-- DATA ROWS -->
            <ItemsRepeater x:Name="DataRowsRepeater"
                           Grid.Row="1"/>
        </Grid>
        
        <!-- Fallback text -->
        <TextBlock Text="DataGrid Ready" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   Foreground="Gray" FontSize="12"/>
    </Grid>
        
</UserControl>